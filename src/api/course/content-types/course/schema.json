{
  "kind": "collectionType",
  "collectionName": "courses",
  "info": {
    "singularName": "course",
    "pluralName": "courses",
    "displayName": "Course"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Description": {
      "type": "richtext"
    },
    "Image": {
      "allowedTypes": [
        "images",
        "files",
        "videos",
        "audios"
      ],
      "type": "media",
      "multiple": false
    },
    "Category": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "lessons": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "admin::user"
    },
    "Published": {
      "type": "boolean",
      "default": false
    },
    "Duration": {
      "type": "integer"
    },
    "Author": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "admin::user"
    },
    "Course": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::lesson.lesson",
      "mappedBy": "Course"
    }
  }
}
