{
  "kind": "collectionType",
  "collectionName": "lessons",
  "info": {
    "singularName": "lesson",
    "pluralName": "lessons",
    "displayName": "Lesson"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {},
  "attributes": {
    "Title": {
      "type": "string",
      "required": true
    },
    "Slug": {
      "type": "uid",
      "targetField": "Title"
    },
    "Content": {
      "type": "richtext"
    },
    "VideoUrl": {
      "type": "string"
    },
    "Course": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::course.course",
      "inversedBy": "Course"
    },
    "Published": {
      "type": "boolean",
      "default": false
    },
    "Duration": {
      "type": "integer"
    }
  }
}
